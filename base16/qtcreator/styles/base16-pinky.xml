<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 pinky">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  pinky scheme by Benjamin (https://github.com/b3nj5m1n)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#f5f5f5" background="#171517"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#1d1b1d"/>
  <style name="CurrentLine" background="#383338"/>
  <style name="LineNumber" foreground="#383338"/>
  <style name="CurrentLineNumber" foreground="#e7dbdb" bold="true"/>
  <style name="SearchResult" background="#1b181b"/>
  <style name="Parentheses" background="#1d1b1d" />
  <style name="ParenthesesMismatch" background="#007fff" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f7f3f7" background="#383338"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#383338"/>
  <style name="Occurrences.Rename" background="#e7dbdb"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#00ff66"/>

  <!-- language primitives -->
  <style name="Number" foreground="#00ff66"/>
  <style name="String" foreground="#ff0066"/>
  <style name="Keyword" foreground="#007fff"/>
  <style name="Operator" foreground="#f5f5f5"/>
  <style name="Preprocessor" foreground="#00ffff"/>
  <style name="Label" foreground="#ffa600"/>

  <!-- types, classes -->
  <style name="Type" foreground="#20df6c"/>
  <style name="PrimitiveType" foreground="#007fff"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#00ffff"/>
  <style name="VirtualMethod" foreground="#00ffff" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#ffffff"/>
  <style name="Local" foreground="#f5f5f5"/>
  <style name="Global" foreground="#f5f5f5"/>
  <style name="Static" foreground="#f5f5f5"/>
  <style name="JsScopeVar" foreground="#f5f5f5" italic="true"/>
  <style name="JsImportVar" foreground="#f5f5f5" italic="true"/>
  <style name="JsGlobalVar" foreground="#f5f5f5" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#1d1b1d"/>

  <!-- comments -->
  <style name="Comment" foreground="#383338"/>
  <style name="DisabledCode" foreground="#383338"/>
  <style name="Doxygen.Comment" foreground="#383338"/>
  <style name="Doxygen.Tag" foreground="#383338"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#007fff"/>
  <style name="Binding" foreground="#ffa600"/>
  <style name="QmlExternalId" foreground="#00ffff" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#00ffff" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#007fff"/>
  <style name="DiffLocation" foreground="#00ffff"/>
  <style name="AddedLine" foreground="#ff0066"/>
  <style name="RemovedLine" foreground="#20df6c"/>
  <style name="LogChangeLine" foreground="#ffa600"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#007fff"/>
  <style name="DiffContextLine" foreground="#00ffff"/>
  <style name="DiffSourceLine" foreground="#ff0066"/>
  <style name="DiffSourceChar" foreground="#20df6c" background="#1b181b"/>
  <style name="DiffDestLine" foreground="#ff0066"/>
  <style name="DiffDestChar" foreground="#20df6c" background="#1b181b"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#ffa600" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#ffa600" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#20df6c" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#20df6c" underlineStyle="DotLine"/>
</style-scheme>
