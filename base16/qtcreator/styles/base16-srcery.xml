<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 srcery">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  srcery scheme by 
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#BAA67F" background="#1C1B19"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#FED06E"/>
  <style name="CurrentLine" background="#918175"/>
  <style name="LineNumber" foreground="#918175"/>
  <style name="CurrentLineNumber" foreground="#68A8E4" bold="true"/>
  <style name="SearchResult" background="#98BC37"/>
  <style name="Parentheses" background="#FED06E" />
  <style name="ParenthesesMismatch" background="#E02C6D" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#FCE8C3" background="#918175"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#918175"/>
  <style name="Occurrences.Rename" background="#68A8E4"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#FF5F00"/>

  <!-- language primitives -->
  <style name="Number" foreground="#FF5F00"/>
  <style name="String" foreground="#519F50"/>
  <style name="Keyword" foreground="#E02C6D"/>
  <style name="Operator" foreground="#BAA67F"/>
  <style name="Preprocessor" foreground="#2C78BF"/>
  <style name="Label" foreground="#EF2F27"/>

  <!-- types, classes -->
  <style name="Type" foreground="#FBB829"/>
  <style name="PrimitiveType" foreground="#E02C6D"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#2C78BF"/>
  <style name="VirtualMethod" foreground="#2C78BF" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#FF5C8F"/>
  <style name="Local" foreground="#BAA67F"/>
  <style name="Global" foreground="#BAA67F"/>
  <style name="Static" foreground="#BAA67F"/>
  <style name="JsScopeVar" foreground="#BAA67F" italic="true"/>
  <style name="JsImportVar" foreground="#BAA67F" italic="true"/>
  <style name="JsGlobalVar" foreground="#BAA67F" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#FED06E"/>

  <!-- comments -->
  <style name="Comment" foreground="#918175"/>
  <style name="DisabledCode" foreground="#918175"/>
  <style name="Doxygen.Comment" foreground="#918175"/>
  <style name="Doxygen.Tag" foreground="#918175"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#E02C6D"/>
  <style name="Binding" foreground="#EF2F27"/>
  <style name="QmlExternalId" foreground="#2C78BF" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#2C78BF" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#E02C6D"/>
  <style name="DiffLocation" foreground="#2C78BF"/>
  <style name="AddedLine" foreground="#519F50"/>
  <style name="RemovedLine" foreground="#FBB829"/>
  <style name="LogChangeLine" foreground="#EF2F27"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#E02C6D"/>
  <style name="DiffContextLine" foreground="#2C78BF"/>
  <style name="DiffSourceLine" foreground="#519F50"/>
  <style name="DiffSourceChar" foreground="#FBB829" background="#98BC37"/>
  <style name="DiffDestLine" foreground="#519F50"/>
  <style name="DiffDestChar" foreground="#FBB829" background="#98BC37"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#EF2F27" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#EF2F27" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#FBB829" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#FBB829" underlineStyle="DotLine"/>
</style-scheme>
