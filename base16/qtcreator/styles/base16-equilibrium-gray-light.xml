<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Equilibrium Gray Light">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Equilibrium Gray Light scheme by Carlo Abelli
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#474747" background="#f1f1f1"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#d4d4d4"/>
  <style name="CurrentLine" background="#777777"/>
  <style name="LineNumber" foreground="#777777"/>
  <style name="CurrentLineNumber" foreground="#5e5e5e" bold="true"/>
  <style name="SearchResult" background="#e2e2e2"/>
  <style name="Parentheses" background="#d4d4d4" />
  <style name="ParenthesesMismatch" background="#4e66b6" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#1b1b1b" background="#777777"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#777777"/>
  <style name="Occurrences.Rename" background="#5e5e5e"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#bf3e05"/>

  <!-- language primitives -->
  <style name="Number" foreground="#bf3e05"/>
  <style name="String" foreground="#637200"/>
  <style name="Keyword" foreground="#4e66b6"/>
  <style name="Operator" foreground="#474747"/>
  <style name="Preprocessor" foreground="#0073b5"/>
  <style name="Label" foreground="#d02023"/>

  <!-- types, classes -->
  <style name="Type" foreground="#9d6f00"/>
  <style name="PrimitiveType" foreground="#4e66b6"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#0073b5"/>
  <style name="VirtualMethod" foreground="#0073b5" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#303030"/>
  <style name="Local" foreground="#474747"/>
  <style name="Global" foreground="#474747"/>
  <style name="Static" foreground="#474747"/>
  <style name="JsScopeVar" foreground="#474747" italic="true"/>
  <style name="JsImportVar" foreground="#474747" italic="true"/>
  <style name="JsGlobalVar" foreground="#474747" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d4d4d4"/>

  <!-- comments -->
  <style name="Comment" foreground="#777777"/>
  <style name="DisabledCode" foreground="#777777"/>
  <style name="Doxygen.Comment" foreground="#777777"/>
  <style name="Doxygen.Tag" foreground="#777777"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#4e66b6"/>
  <style name="Binding" foreground="#d02023"/>
  <style name="QmlExternalId" foreground="#0073b5" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#0073b5" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#4e66b6"/>
  <style name="DiffLocation" foreground="#0073b5"/>
  <style name="AddedLine" foreground="#637200"/>
  <style name="RemovedLine" foreground="#9d6f00"/>
  <style name="LogChangeLine" foreground="#d02023"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#4e66b6"/>
  <style name="DiffContextLine" foreground="#0073b5"/>
  <style name="DiffSourceLine" foreground="#637200"/>
  <style name="DiffSourceChar" foreground="#9d6f00" background="#e2e2e2"/>
  <style name="DiffDestLine" foreground="#637200"/>
  <style name="DiffDestChar" foreground="#9d6f00" background="#e2e2e2"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#d02023" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#d02023" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#9d6f00" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#9d6f00" underlineStyle="DotLine"/>
</style-scheme>
