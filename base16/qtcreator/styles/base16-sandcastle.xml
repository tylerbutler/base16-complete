<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Sandcastle">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Sandcastle scheme by George Essig (https://github.com/gessig)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#a89984" background="#282c34"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#3e4451"/>
  <style name="CurrentLine" background="#665c54"/>
  <style name="LineNumber" foreground="#665c54"/>
  <style name="CurrentLineNumber" foreground="#928374" bold="true"/>
  <style name="SearchResult" background="#2c323b"/>
  <style name="Parentheses" background="#3e4451" />
  <style name="ParenthesesMismatch" background="#d75f5f" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#fdf4c1" background="#665c54"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#665c54"/>
  <style name="Occurrences.Rename" background="#928374"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#a07e3b"/>

  <!-- language primitives -->
  <style name="Number" foreground="#a07e3b"/>
  <style name="String" foreground="#528b8b"/>
  <style name="Keyword" foreground="#d75f5f"/>
  <style name="Operator" foreground="#a89984"/>
  <style name="Preprocessor" foreground="#83a598"/>
  <style name="Label" foreground="#83a598"/>

  <!-- types, classes -->
  <style name="Type" foreground="#a07e3b"/>
  <style name="PrimitiveType" foreground="#d75f5f"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#83a598"/>
  <style name="VirtualMethod" foreground="#83a598" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#d5c4a1"/>
  <style name="Local" foreground="#a89984"/>
  <style name="Global" foreground="#a89984"/>
  <style name="Static" foreground="#a89984"/>
  <style name="JsScopeVar" foreground="#a89984" italic="true"/>
  <style name="JsImportVar" foreground="#a89984" italic="true"/>
  <style name="JsGlobalVar" foreground="#a89984" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#3e4451"/>

  <!-- comments -->
  <style name="Comment" foreground="#665c54"/>
  <style name="DisabledCode" foreground="#665c54"/>
  <style name="Doxygen.Comment" foreground="#665c54"/>
  <style name="Doxygen.Tag" foreground="#665c54"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#d75f5f"/>
  <style name="Binding" foreground="#83a598"/>
  <style name="QmlExternalId" foreground="#83a598" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#83a598" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#d75f5f"/>
  <style name="DiffLocation" foreground="#83a598"/>
  <style name="AddedLine" foreground="#528b8b"/>
  <style name="RemovedLine" foreground="#a07e3b"/>
  <style name="LogChangeLine" foreground="#83a598"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#d75f5f"/>
  <style name="DiffContextLine" foreground="#83a598"/>
  <style name="DiffSourceLine" foreground="#528b8b"/>
  <style name="DiffSourceChar" foreground="#a07e3b" background="#2c323b"/>
  <style name="DiffDestLine" foreground="#528b8b"/>
  <style name="DiffDestChar" foreground="#a07e3b" background="#2c323b"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#83a598" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#83a598" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#a07e3b" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#a07e3b" underlineStyle="DotLine"/>
</style-scheme>
