<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Decaf">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Decaf scheme by Alex Mirrington (https://github.com/alexmirrington)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#cccccc" background="#2d2d2d"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#515151"/>
  <style name="CurrentLine" background="#777777"/>
  <style name="LineNumber" foreground="#777777"/>
  <style name="CurrentLineNumber" foreground="#b4b7b4" bold="true"/>
  <style name="SearchResult" background="#393939"/>
  <style name="Parentheses" background="#515151" />
  <style name="ParenthesesMismatch" background="#efb3f7" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#ffffff" background="#777777"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#777777"/>
  <style name="Occurrences.Rename" background="#b4b7b4"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ffbf70"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ffbf70"/>
  <style name="String" foreground="#beda78"/>
  <style name="Keyword" foreground="#efb3f7"/>
  <style name="Operator" foreground="#cccccc"/>
  <style name="Preprocessor" foreground="#90bee1"/>
  <style name="Label" foreground="#ff7f7b"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffd67c"/>
  <style name="PrimitiveType" foreground="#efb3f7"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#90bee1"/>
  <style name="VirtualMethod" foreground="#90bee1" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e0e0e0"/>
  <style name="Local" foreground="#cccccc"/>
  <style name="Global" foreground="#cccccc"/>
  <style name="Static" foreground="#cccccc"/>
  <style name="JsScopeVar" foreground="#cccccc" italic="true"/>
  <style name="JsImportVar" foreground="#cccccc" italic="true"/>
  <style name="JsGlobalVar" foreground="#cccccc" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#515151"/>

  <!-- comments -->
  <style name="Comment" foreground="#777777"/>
  <style name="DisabledCode" foreground="#777777"/>
  <style name="Doxygen.Comment" foreground="#777777"/>
  <style name="Doxygen.Tag" foreground="#777777"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#efb3f7"/>
  <style name="Binding" foreground="#ff7f7b"/>
  <style name="QmlExternalId" foreground="#90bee1" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#90bee1" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#efb3f7"/>
  <style name="DiffLocation" foreground="#90bee1"/>
  <style name="AddedLine" foreground="#beda78"/>
  <style name="RemovedLine" foreground="#ffd67c"/>
  <style name="LogChangeLine" foreground="#ff7f7b"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#efb3f7"/>
  <style name="DiffContextLine" foreground="#90bee1"/>
  <style name="DiffSourceLine" foreground="#beda78"/>
  <style name="DiffSourceChar" foreground="#ffd67c" background="#393939"/>
  <style name="DiffDestLine" foreground="#beda78"/>
  <style name="DiffDestChar" foreground="#ffd67c" background="#393939"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#ff7f7b" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#ff7f7b" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#ffd67c" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#ffd67c" underlineStyle="DotLine"/>
</style-scheme>
