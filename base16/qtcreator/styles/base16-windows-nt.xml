<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Windows NT">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Windows NT scheme by Fergus Collins (https://github.com/C-Fergus)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#c0c0c0" background="#000000"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#555555"/>
  <style name="CurrentLine" background="#808080"/>
  <style name="LineNumber" foreground="#808080"/>
  <style name="CurrentLineNumber" foreground="#a1a1a1" bold="true"/>
  <style name="SearchResult" background="#2a2a2a"/>
  <style name="Parentheses" background="#555555" />
  <style name="ParenthesesMismatch" background="#ff00ff" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#ffffff" background="#808080"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#808080"/>
  <style name="Occurrences.Rename" background="#a1a1a1"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#808000"/>

  <!-- language primitives -->
  <style name="Number" foreground="#808000"/>
  <style name="String" foreground="#00ff00"/>
  <style name="Keyword" foreground="#ff00ff"/>
  <style name="Operator" foreground="#c0c0c0"/>
  <style name="Preprocessor" foreground="#0000ff"/>
  <style name="Label" foreground="#ff0000"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffff00"/>
  <style name="PrimitiveType" foreground="#ff00ff"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#0000ff"/>
  <style name="VirtualMethod" foreground="#0000ff" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e0e0e0"/>
  <style name="Local" foreground="#c0c0c0"/>
  <style name="Global" foreground="#c0c0c0"/>
  <style name="Static" foreground="#c0c0c0"/>
  <style name="JsScopeVar" foreground="#c0c0c0" italic="true"/>
  <style name="JsImportVar" foreground="#c0c0c0" italic="true"/>
  <style name="JsGlobalVar" foreground="#c0c0c0" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#555555"/>

  <!-- comments -->
  <style name="Comment" foreground="#808080"/>
  <style name="DisabledCode" foreground="#808080"/>
  <style name="Doxygen.Comment" foreground="#808080"/>
  <style name="Doxygen.Tag" foreground="#808080"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#ff00ff"/>
  <style name="Binding" foreground="#ff0000"/>
  <style name="QmlExternalId" foreground="#0000ff" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#0000ff" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#ff00ff"/>
  <style name="DiffLocation" foreground="#0000ff"/>
  <style name="AddedLine" foreground="#00ff00"/>
  <style name="RemovedLine" foreground="#ffff00"/>
  <style name="LogChangeLine" foreground="#ff0000"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#ff00ff"/>
  <style name="DiffContextLine" foreground="#0000ff"/>
  <style name="DiffSourceLine" foreground="#00ff00"/>
  <style name="DiffSourceChar" foreground="#ffff00" background="#2a2a2a"/>
  <style name="DiffDestLine" foreground="#00ff00"/>
  <style name="DiffDestChar" foreground="#ffff00" background="#2a2a2a"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#ff0000" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#ff0000" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#ffff00" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#ffff00" underlineStyle="DotLine"/>
</style-scheme>
