<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Nova">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Nova scheme by George Essig (https://github.com/gessig), Trevor D. Miller (https://trevordmiller.com)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#C5D4DD" background="#3C4C55"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#6A7D89"/>
  <style name="CurrentLine" background="#899BA6"/>
  <style name="LineNumber" foreground="#899BA6"/>
  <style name="CurrentLineNumber" foreground="#899BA6" bold="true"/>
  <style name="SearchResult" background="#556873"/>
  <style name="Parentheses" background="#6A7D89" />
  <style name="ParenthesesMismatch" background="#9A93E1" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#556873" background="#899BA6"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#899BA6"/>
  <style name="Occurrences.Rename" background="#899BA6"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#7FC1CA"/>

  <!-- language primitives -->
  <style name="Number" foreground="#7FC1CA"/>
  <style name="String" foreground="#7FC1CA"/>
  <style name="Keyword" foreground="#9A93E1"/>
  <style name="Operator" foreground="#C5D4DD"/>
  <style name="Preprocessor" foreground="#83AFE5"/>
  <style name="Label" foreground="#83AFE5"/>

  <!-- types, classes -->
  <style name="Type" foreground="#A8CE93"/>
  <style name="PrimitiveType" foreground="#9A93E1"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#83AFE5"/>
  <style name="VirtualMethod" foreground="#83AFE5" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#899BA6"/>
  <style name="Local" foreground="#C5D4DD"/>
  <style name="Global" foreground="#C5D4DD"/>
  <style name="Static" foreground="#C5D4DD"/>
  <style name="JsScopeVar" foreground="#C5D4DD" italic="true"/>
  <style name="JsImportVar" foreground="#C5D4DD" italic="true"/>
  <style name="JsGlobalVar" foreground="#C5D4DD" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#6A7D89"/>

  <!-- comments -->
  <style name="Comment" foreground="#899BA6"/>
  <style name="DisabledCode" foreground="#899BA6"/>
  <style name="Doxygen.Comment" foreground="#899BA6"/>
  <style name="Doxygen.Tag" foreground="#899BA6"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#9A93E1"/>
  <style name="Binding" foreground="#83AFE5"/>
  <style name="QmlExternalId" foreground="#83AFE5" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#83AFE5" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#9A93E1"/>
  <style name="DiffLocation" foreground="#83AFE5"/>
  <style name="AddedLine" foreground="#7FC1CA"/>
  <style name="RemovedLine" foreground="#A8CE93"/>
  <style name="LogChangeLine" foreground="#83AFE5"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#9A93E1"/>
  <style name="DiffContextLine" foreground="#83AFE5"/>
  <style name="DiffSourceLine" foreground="#7FC1CA"/>
  <style name="DiffSourceChar" foreground="#A8CE93" background="#556873"/>
  <style name="DiffDestLine" foreground="#7FC1CA"/>
  <style name="DiffDestChar" foreground="#A8CE93" background="#556873"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#83AFE5" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#83AFE5" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#A8CE93" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#A8CE93" underlineStyle="DotLine"/>
</style-scheme>
