<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Vice Alt">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Vice Alt scheme by Thomas Leon Highbaugh
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#d7afff" background="#303030"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#878787"/>
  <style name="CurrentLine" background="#875faf"/>
  <style name="LineNumber" foreground="#875faf"/>
  <style name="CurrentLineNumber" foreground="#afafd7" bold="true"/>
  <style name="SearchResult" background="#444444"/>
  <style name="Parentheses" background="#878787" />
  <style name="ParenthesesMismatch" background="#d7afff" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#afffd7" background="#875faf"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#875faf"/>
  <style name="Occurrences.Rename" background="#afafd7"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ff00ff"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ff00ff"/>
  <style name="String" foreground="#87ffff"/>
  <style name="Keyword" foreground="#d7afff"/>
  <style name="Operator" foreground="#d7afff"/>
  <style name="Preprocessor" foreground="#afffff"/>
  <style name="Label" foreground="#ff005f"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffffaf"/>
  <style name="PrimitiveType" foreground="#d7afff"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#afffff"/>
  <style name="VirtualMethod" foreground="#afffff" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#ffffff"/>
  <style name="Local" foreground="#d7afff"/>
  <style name="Global" foreground="#d7afff"/>
  <style name="Static" foreground="#d7afff"/>
  <style name="JsScopeVar" foreground="#d7afff" italic="true"/>
  <style name="JsImportVar" foreground="#d7afff" italic="true"/>
  <style name="JsGlobalVar" foreground="#d7afff" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#878787"/>

  <!-- comments -->
  <style name="Comment" foreground="#875faf"/>
  <style name="DisabledCode" foreground="#875faf"/>
  <style name="Doxygen.Comment" foreground="#875faf"/>
  <style name="Doxygen.Tag" foreground="#875faf"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#d7afff"/>
  <style name="Binding" foreground="#ff005f"/>
  <style name="QmlExternalId" foreground="#afffff" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#afffff" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#d7afff"/>
  <style name="DiffLocation" foreground="#afffff"/>
  <style name="AddedLine" foreground="#87ffff"/>
  <style name="RemovedLine" foreground="#ffffaf"/>
  <style name="LogChangeLine" foreground="#ff005f"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#d7afff"/>
  <style name="DiffContextLine" foreground="#afffff"/>
  <style name="DiffSourceLine" foreground="#87ffff"/>
  <style name="DiffSourceChar" foreground="#ffffaf" background="#444444"/>
  <style name="DiffDestLine" foreground="#87ffff"/>
  <style name="DiffDestChar" foreground="#ffffaf" background="#444444"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#ff005f" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#ff005f" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#ffffaf" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#ffffaf" underlineStyle="DotLine"/>
</style-scheme>
