<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Apprentice">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Apprentice scheme by romainl
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#5F5F87" background="#262626"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#5F875F"/>
  <style name="CurrentLine" background="#87875F"/>
  <style name="LineNumber" foreground="#87875F"/>
  <style name="CurrentLineNumber" foreground="#5F87AF" bold="true"/>
  <style name="SearchResult" background="#AF5F5F"/>
  <style name="Parentheses" background="#5F875F" />
  <style name="ParenthesesMismatch" background="#5FAFAF" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#6C6C6C" background="#87875F"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#87875F"/>
  <style name="Occurrences.Rename" background="#5F87AF"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#FF8700"/>

  <!-- language primitives -->
  <style name="Number" foreground="#FF8700"/>
  <style name="String" foreground="#FFFFAF"/>
  <style name="Keyword" foreground="#5FAFAF"/>
  <style name="Operator" foreground="#5F5F87"/>
  <style name="Preprocessor" foreground="#8787AF"/>
  <style name="Label" foreground="#444444"/>

  <!-- types, classes -->
  <style name="Type" foreground="#87AF87"/>
  <style name="PrimitiveType" foreground="#5FAFAF"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#8787AF"/>
  <style name="VirtualMethod" foreground="#8787AF" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#5F8787"/>
  <style name="Local" foreground="#5F5F87"/>
  <style name="Global" foreground="#5F5F87"/>
  <style name="Static" foreground="#5F5F87"/>
  <style name="JsScopeVar" foreground="#5F5F87" italic="true"/>
  <style name="JsImportVar" foreground="#5F5F87" italic="true"/>
  <style name="JsGlobalVar" foreground="#5F5F87" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#5F875F"/>

  <!-- comments -->
  <style name="Comment" foreground="#87875F"/>
  <style name="DisabledCode" foreground="#87875F"/>
  <style name="Doxygen.Comment" foreground="#87875F"/>
  <style name="Doxygen.Tag" foreground="#87875F"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#5FAFAF"/>
  <style name="Binding" foreground="#444444"/>
  <style name="QmlExternalId" foreground="#8787AF" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#8787AF" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#5FAFAF"/>
  <style name="DiffLocation" foreground="#8787AF"/>
  <style name="AddedLine" foreground="#FFFFAF"/>
  <style name="RemovedLine" foreground="#87AF87"/>
  <style name="LogChangeLine" foreground="#444444"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#5FAFAF"/>
  <style name="DiffContextLine" foreground="#8787AF"/>
  <style name="DiffSourceLine" foreground="#FFFFAF"/>
  <style name="DiffSourceChar" foreground="#87AF87" background="#AF5F5F"/>
  <style name="DiffDestLine" foreground="#FFFFAF"/>
  <style name="DiffDestChar" foreground="#87AF87" background="#AF5F5F"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#444444" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#444444" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#87AF87" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#87AF87" underlineStyle="DotLine"/>
</style-scheme>
