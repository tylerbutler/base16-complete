<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Edge Light">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Edge Light scheme by cjayross (https://github.com/cjayross)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#5e646f" background="#fafafa"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#d69822"/>
  <style name="CurrentLine" background="#5e646f"/>
  <style name="LineNumber" foreground="#5e646f"/>
  <style name="CurrentLineNumber" foreground="#6587bf" bold="true"/>
  <style name="SearchResult" background="#7c9f4b"/>
  <style name="Parentheses" background="#d69822" />
  <style name="ParenthesesMismatch" background="#b870ce" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#5e646f" background="#5e646f"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#5e646f"/>
  <style name="Occurrences.Rename" background="#6587bf"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#db7070"/>

  <!-- language primitives -->
  <style name="Number" foreground="#db7070"/>
  <style name="String" foreground="#7c9f4b"/>
  <style name="Keyword" foreground="#b870ce"/>
  <style name="Operator" foreground="#5e646f"/>
  <style name="Preprocessor" foreground="#6587bf"/>
  <style name="Label" foreground="#db7070"/>

  <!-- types, classes -->
  <style name="Type" foreground="#d69822"/>
  <style name="PrimitiveType" foreground="#b870ce"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#6587bf"/>
  <style name="VirtualMethod" foreground="#6587bf" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#b870ce"/>
  <style name="Local" foreground="#5e646f"/>
  <style name="Global" foreground="#5e646f"/>
  <style name="Static" foreground="#5e646f"/>
  <style name="JsScopeVar" foreground="#5e646f" italic="true"/>
  <style name="JsImportVar" foreground="#5e646f" italic="true"/>
  <style name="JsGlobalVar" foreground="#5e646f" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d69822"/>

  <!-- comments -->
  <style name="Comment" foreground="#5e646f"/>
  <style name="DisabledCode" foreground="#5e646f"/>
  <style name="Doxygen.Comment" foreground="#5e646f"/>
  <style name="Doxygen.Tag" foreground="#5e646f"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b870ce"/>
  <style name="Binding" foreground="#db7070"/>
  <style name="QmlExternalId" foreground="#6587bf" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#6587bf" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b870ce"/>
  <style name="DiffLocation" foreground="#6587bf"/>
  <style name="AddedLine" foreground="#7c9f4b"/>
  <style name="RemovedLine" foreground="#d69822"/>
  <style name="LogChangeLine" foreground="#db7070"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b870ce"/>
  <style name="DiffContextLine" foreground="#6587bf"/>
  <style name="DiffSourceLine" foreground="#7c9f4b"/>
  <style name="DiffSourceChar" foreground="#d69822" background="#7c9f4b"/>
  <style name="DiffDestLine" foreground="#7c9f4b"/>
  <style name="DiffDestChar" foreground="#d69822" background="#7c9f4b"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#db7070" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#db7070" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#d69822" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#d69822" underlineStyle="DotLine"/>
</style-scheme>
