<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Windows 10">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Windows 10 scheme by Fergus Collins (https://github.com/C-Fergus)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#cccccc" background="#0c0c0c"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#535353"/>
  <style name="CurrentLine" background="#767676"/>
  <style name="LineNumber" foreground="#767676"/>
  <style name="CurrentLineNumber" foreground="#b9b9b9" bold="true"/>
  <style name="SearchResult" background="#2f2f2f"/>
  <style name="Parentheses" background="#535353" />
  <style name="ParenthesesMismatch" background="#b4009e" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f2f2f2" background="#767676"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#767676"/>
  <style name="Occurrences.Rename" background="#b9b9b9"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#c19c00"/>

  <!-- language primitives -->
  <style name="Number" foreground="#c19c00"/>
  <style name="String" foreground="#16c60c"/>
  <style name="Keyword" foreground="#b4009e"/>
  <style name="Operator" foreground="#cccccc"/>
  <style name="Preprocessor" foreground="#3b78ff"/>
  <style name="Label" foreground="#e74856"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f9f1a5"/>
  <style name="PrimitiveType" foreground="#b4009e"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#3b78ff"/>
  <style name="VirtualMethod" foreground="#3b78ff" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#dfdfdf"/>
  <style name="Local" foreground="#cccccc"/>
  <style name="Global" foreground="#cccccc"/>
  <style name="Static" foreground="#cccccc"/>
  <style name="JsScopeVar" foreground="#cccccc" italic="true"/>
  <style name="JsImportVar" foreground="#cccccc" italic="true"/>
  <style name="JsGlobalVar" foreground="#cccccc" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#535353"/>

  <!-- comments -->
  <style name="Comment" foreground="#767676"/>
  <style name="DisabledCode" foreground="#767676"/>
  <style name="Doxygen.Comment" foreground="#767676"/>
  <style name="Doxygen.Tag" foreground="#767676"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b4009e"/>
  <style name="Binding" foreground="#e74856"/>
  <style name="QmlExternalId" foreground="#3b78ff" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#3b78ff" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b4009e"/>
  <style name="DiffLocation" foreground="#3b78ff"/>
  <style name="AddedLine" foreground="#16c60c"/>
  <style name="RemovedLine" foreground="#f9f1a5"/>
  <style name="LogChangeLine" foreground="#e74856"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b4009e"/>
  <style name="DiffContextLine" foreground="#3b78ff"/>
  <style name="DiffSourceLine" foreground="#16c60c"/>
  <style name="DiffSourceChar" foreground="#f9f1a5" background="#2f2f2f"/>
  <style name="DiffDestLine" foreground="#16c60c"/>
  <style name="DiffDestChar" foreground="#f9f1a5" background="#2f2f2f"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#e74856" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#e74856" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#f9f1a5" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#f9f1a5" underlineStyle="DotLine"/>
</style-scheme>
