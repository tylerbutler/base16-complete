<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Rigel">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Rigel scheme by Alexander Keliris
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#77929e" background="#00384d"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#ffcc1b"/>
  <style name="CurrentLine" background="#517f8d"/>
  <style name="LineNumber" foreground="#517f8d"/>
  <style name="CurrentLineNumber" foreground="#7eb2dd" bold="true"/>
  <style name="SearchResult" background="#9cf087"/>
  <style name="Parentheses" background="#ffcc1b" />
  <style name="ParenthesesMismatch" background="#c694ff" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#e6e6dc" background="#517f8d"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#517f8d"/>
  <style name="Occurrences.Rename" background="#7eb2dd"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ff5a67"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ff5a67"/>
  <style name="String" foreground="#7fc06e"/>
  <style name="Keyword" foreground="#c694ff"/>
  <style name="Operator" foreground="#77929e"/>
  <style name="Preprocessor" foreground="#1c8db2"/>
  <style name="Label" foreground="#c43061"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f08e48"/>
  <style name="PrimitiveType" foreground="#c694ff"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#1c8db2"/>
  <style name="VirtualMethod" foreground="#1c8db2" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#fb94ff"/>
  <style name="Local" foreground="#77929e"/>
  <style name="Global" foreground="#77929e"/>
  <style name="Static" foreground="#77929e"/>
  <style name="JsScopeVar" foreground="#77929e" italic="true"/>
  <style name="JsImportVar" foreground="#77929e" italic="true"/>
  <style name="JsGlobalVar" foreground="#77929e" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#ffcc1b"/>

  <!-- comments -->
  <style name="Comment" foreground="#517f8d"/>
  <style name="DisabledCode" foreground="#517f8d"/>
  <style name="Doxygen.Comment" foreground="#517f8d"/>
  <style name="Doxygen.Tag" foreground="#517f8d"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#c694ff"/>
  <style name="Binding" foreground="#c43061"/>
  <style name="QmlExternalId" foreground="#1c8db2" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#1c8db2" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#c694ff"/>
  <style name="DiffLocation" foreground="#1c8db2"/>
  <style name="AddedLine" foreground="#7fc06e"/>
  <style name="RemovedLine" foreground="#f08e48"/>
  <style name="LogChangeLine" foreground="#c43061"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#c694ff"/>
  <style name="DiffContextLine" foreground="#1c8db2"/>
  <style name="DiffSourceLine" foreground="#7fc06e"/>
  <style name="DiffSourceChar" foreground="#f08e48" background="#9cf087"/>
  <style name="DiffDestLine" foreground="#7fc06e"/>
  <style name="DiffDestChar" foreground="#f08e48" background="#9cf087"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#c43061" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#c43061" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#f08e48" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#f08e48" underlineStyle="DotLine"/>
</style-scheme>
