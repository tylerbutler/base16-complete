<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Sagelight">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Sagelight scheme by Carter Veldhuizen
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#383838" background="#f8f8f8"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#d8d8d8"/>
  <style name="CurrentLine" background="#b8b8b8"/>
  <style name="LineNumber" foreground="#b8b8b8"/>
  <style name="CurrentLineNumber" foreground="#585858" bold="true"/>
  <style name="SearchResult" background="#e8e8e8"/>
  <style name="Parentheses" background="#d8d8d8" />
  <style name="ParenthesesMismatch" background="#c8a0d2" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#181818" background="#b8b8b8"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#b8b8b8"/>
  <style name="Occurrences.Rename" background="#585858"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ffaa61"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ffaa61"/>
  <style name="String" foreground="#a0d2c8"/>
  <style name="Keyword" foreground="#c8a0d2"/>
  <style name="Operator" foreground="#383838"/>
  <style name="Preprocessor" foreground="#a0a7d2"/>
  <style name="Label" foreground="#fa8480"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ffdc61"/>
  <style name="PrimitiveType" foreground="#c8a0d2"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#a0a7d2"/>
  <style name="VirtualMethod" foreground="#a0a7d2" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#282828"/>
  <style name="Local" foreground="#383838"/>
  <style name="Global" foreground="#383838"/>
  <style name="Static" foreground="#383838"/>
  <style name="JsScopeVar" foreground="#383838" italic="true"/>
  <style name="JsImportVar" foreground="#383838" italic="true"/>
  <style name="JsGlobalVar" foreground="#383838" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#d8d8d8"/>

  <!-- comments -->
  <style name="Comment" foreground="#b8b8b8"/>
  <style name="DisabledCode" foreground="#b8b8b8"/>
  <style name="Doxygen.Comment" foreground="#b8b8b8"/>
  <style name="Doxygen.Tag" foreground="#b8b8b8"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#c8a0d2"/>
  <style name="Binding" foreground="#fa8480"/>
  <style name="QmlExternalId" foreground="#a0a7d2" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#a0a7d2" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#c8a0d2"/>
  <style name="DiffLocation" foreground="#a0a7d2"/>
  <style name="AddedLine" foreground="#a0d2c8"/>
  <style name="RemovedLine" foreground="#ffdc61"/>
  <style name="LogChangeLine" foreground="#fa8480"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#c8a0d2"/>
  <style name="DiffContextLine" foreground="#a0a7d2"/>
  <style name="DiffSourceLine" foreground="#a0d2c8"/>
  <style name="DiffSourceChar" foreground="#ffdc61" background="#e8e8e8"/>
  <style name="DiffDestLine" foreground="#a0d2c8"/>
  <style name="DiffDestChar" foreground="#ffdc61" background="#e8e8e8"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#fa8480" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#fa8480" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#ffdc61" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#ffdc61" underlineStyle="DotLine"/>
</style-scheme>
